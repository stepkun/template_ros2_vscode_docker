{
  // inspired by https://github.com/athackst/vscode_ros2_workspace/blob/iron/.vscode/settings.json
  "editor.tabSize": 2,
  "editor.rulers": [
      100
  ],
  "files.associations": {
    "*.repos": "yaml",
    "*.world": "xml",
    "*.xacro": "xml"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/install": true,
    "**/log": true
  },
  "cmake.configureOnOpen": false,
  "python.analysis.typeCheckingMode": "basic",
  "python.autoComplete.extraPaths": [
    "/home/ros/workspace/install/local/lib/python3.10/dist-packages",
    "/opt/vulcanexus/iron/local/lib/python3.10/dist-packages",
    "/opt/vulcanexus/iron/lib/python3.10/site-packages",
    "/opt/ros/iron/lib/python3.10/site-packages",
    "/opt/ros/iron/local/lib/python3.10/dist-packages"
  ],
  "python.analysis.extraPaths": [
    "/home/ros/workspace/install/local/lib/python3.10/dist-packages",
    "/opt/vulcanexus/iron/local/lib/python3.10/dist-packages",
    "/opt/vulcanexus/iron/lib/python3.10/site-packages",
    "/opt/ros/iron/lib/python3.10/site-packages",
    "/opt/ros/iron/local/lib/python3.10/dist-packages"
  ],
}
